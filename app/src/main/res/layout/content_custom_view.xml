<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.custom.CustomViewActivity"
    tools:showIn="@layout/activity_custom_view">

    <TextView
        android:id="@+id/label_custom_view"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:text="A custom view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.axiasoft.mycertificationworkout.views.custom.SadFaceView
        android:id="@+id/cv_sad_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Display face"
        app:layout_constraintTop_toTopOf="parent" />

    <com.axiasoft.mycertificationworkout.views.custom.SadFaceView
        android:id="@+id/happyButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:borderColor="@android:color/darker_gray"
        app:faceSize="64dp"
        app:eyesColor="@color/white"
        app:faceColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:mouthColor="@color/white"
        android:contentDescription="Gray face button"
        app:state="happy" />

    <com.axiasoft.mycertificationworkout.views.custom.SadFaceView
        android:id="@+id/sadButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:faceSize="64dp"
        app:borderColor="@android:color/holo_red_dark"
        app:eyesColor="@color/white"
        app:faceColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:mouthColor="@color/white"
        app:state="sad" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context=".views.WordsActivity"
    android:background="@android:color/white"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp">

    <CheckBox
        android:id="@+id/cb_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_toEndOf="@id/cb_item_status"
        android:layout_toRightOf="@id/cb_item_status"
        style="@style/item_row_text"
        android:layout_centerVertical="true"
        android:text="DemoStringHere!" />

    <Button
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_item_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@android:drawable/ic_menu_delete"/>
</RelativeLayout>
